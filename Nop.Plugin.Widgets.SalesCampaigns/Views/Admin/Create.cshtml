@using Nop.Plugin.Widgets.SalesCampaigns.Models
@using Nop.Web.Framework.Infrastructure
@using Nop.Web.Framework.UI
@model SalesCampaignsModel
@{
    Layout = "_AdminLayout";
}

<form asp-controller="SalesCampaigns" asp-action="Create" method="post" id="salesCampaigns-form">
    <div class="form-horizontal">
        <div class="content-header clearfix">
            <h1 class="float-left">
                @T("Plugins.Widgets.SalesCampaigns.AddNew")
                <small>
                    <i class="fas fa-arrow-circle-left"></i>
                    <a asp-action="List">@T("Plugins.Widgets.SalesCampaigns.BackToList")</a>
                </small>
            </h1>
            <div class="float-right">
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
                <button type="submit" name="save-continue" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.SaveContinue")
                </button>
                @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.WidgetListButtons, additionalData = Model })
            </div>
        </div>

        @(await Html.PartialAsync("~/Plugins/Widgets.SalesCampaigns/Views/Admin/ConfigurePage.cshtml", Model))
    </div>
</form>
